{
    "parser": "babel-eslint",
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "plugins": ["react", "jsx-a11y", "import"],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-unused-vars": 1,
        "max-len": [1, 120, 2, { "ignoreComments": true }],
        "indent": [2, "tab", { "VariableDeclarator": 1 }],
        "class-methods-use-this": 0,
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "semi": ["error", "always"]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.0"
        }
    }
}
